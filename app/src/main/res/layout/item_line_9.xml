<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/ic_v_back"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/vID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="记录违规时间：CH-12356456685"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="小车ID："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        <Spinner
            android:id="@+id/id_carID_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="车牌号："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        <user_and_manager.chenhao.com.user_and_manager.widget.AutoEditText
            android:id="@+id/id_carNumber_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="违规地址："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        <user_and_manager.chenhao.com.user_and_manager.widget.AutoEditText
            android:id="@+id/id_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="默认地址"/>

    </LinearLayout>

    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="违规信息："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        <Spinner
            android:id="@+id/id_Msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/rule_list"
            android:maxLines="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处罚信息："
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/chufa_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="无"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="扣除分数："
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

            <user_and_manager.chenhao.com.user_and_manager.widget.AutoEditText
                android:id="@+id/id_grade_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLines="1"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="罚款："
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

            <user_and_manager.chenhao.com.user_and_manager.widget.AutoEditText

                android:id="@+id/id_money_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLines="1"
                android:text="0"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imager1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imager2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imager3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone"/>

    </LinearLayout>


    <TextView
        android:id="@+id/vOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="采集机关：福建交警大队XX支队"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_v_back"
        android:text="提交"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

</LinearLayout>