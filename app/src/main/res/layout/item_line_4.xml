<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/FrameLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

    <LinearLayout
        android:id="@+id/find_vio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_gray_back"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/up_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="罚款50"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/up_LastFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="滞纳金50"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/up_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="17-03-18-20:55"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.8"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/up_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="违规编号: 10086"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#708090"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/up_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="扣分: 10086"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#708090"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/up_catNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="车牌: 10086"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#708090"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/up_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="地点: 10086"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#708090"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/up_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="行为: 10086"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#708090"
            android:textSize="16sp"/>
    </LinearLayout>
</FrameLayout>